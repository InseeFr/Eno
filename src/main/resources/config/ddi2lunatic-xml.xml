<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains common properties used by the ddi2lunatic-xml transformation  -->
<Properties>
    <EnoVersion>${project.version}</EnoVersion>
    <Images>
        <Folder>img</Folder>
    </Images>
    <TextConditioningVariable>
        <ddi>
            <Before>¤</Before>
            <After>¤</After>
        </ddi>
    </TextConditioningVariable>
    <!-- sdmx / apache / identity -->
    <Filter>sdmx</Filter>
    <Context>default</Context>
    <FilterDescription>false</FilterDescription>
    <EndQuestion>
        <Folder>xslt/post-processing/lunatic-xml/end-question</Folder>
        <ResponseTimeQuestion>false</ResponseTimeQuestion>
        <CommentQuestion>false</CommentQuestion>
    </EndQuestion>    
    <BeginQuestion>
        <Folder>xslt/post-processing/lunatic-xml/begin-question</Folder>
        <Identification>false</Identification>
    </BeginQuestion>
    <Pagination>none</Pagination>
    
    <!-- https://outils-javascript.aliasdmc.fr/encodage-caracteres-speciaux/encode-caractere-2019-html-css-js-autre.html -->
    <JSEncoding>
        <char>
            <in>"</in>
            <out>’’</out>
        </char>
        <char>
            <in>'</in>
            <out>’</out>
        </char>
    </JSEncoding>
</Properties>