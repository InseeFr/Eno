<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains common properties used by the ddi2pdf transformation  -->
<Properties>
	<TextConditioningVariable>
		<ddi>
			<Before>¤</Before>
			<After>¤</After>
		</ddi>
	</TextConditioningVariable>
	<Format>
		<Columns>1</Columns>
		<!-- Orientation : portrait= 0 ou paysage =90 -->
		<Orientation>0</Orientation>
	</Format>
	
	<!-- default /household / business -->
	<StudyUnit>default</StudyUnit>
	<!-- Modèle de première page -->
	<FirstPage>
		<Folder>xslt/post-processing/pdf/page-first</Folder>
	</FirstPage>
	<AccompanyingMails>
		<Folder>xslt/post-processing/pdf/accompanying-mails</Folder>
	</AccompanyingMails>
	<EndQuestion>
		<Folder>xslt/post-processing/pdf/end-question</Folder>
		<ResponseTimeQuestion>true</ResponseTimeQuestion>
		<CommentQuestion>true</CommentQuestion>
	</EndQuestion>
	<PageModel>
		<Folder>xslt/post-processing/pdf/page-model</Folder>
	</PageModel>
	<Style>
		<Folder>styles</Folder>
		<File>style.xsl</File>
	</Style>
	<Capture>
		<!-- manual or optical -->
		<Numeric>optical</Numeric>
	</Capture>
	<Images>
	<!-- <Folder></Folder> for relative folder -->
	<Folder></Folder>
    </Images>
    <!-- Definit la taille par défaut des rosters -->
    <Roster>
    	<Row>
    		<DefaultSize>15</DefaultSize>
    	</Row>
    </Roster>
    <!-- Definit le nombre maximum de lignes dans une page pour un tableau ou un roster ; et le nombre de lignes en moins sur la première page du tableau -->
    <Table>
    	<Row>
    		<DefaultSize>19</DefaultSize>
    		<NbRow>1</NbRow>
    	</Row>
    </Table>
    <TextArea>
    	<Row>
    		<DefaultSize>5</DefaultSize>
    	</Row>
    </TextArea>
    <!-- BarCode type: Datamatrix ou 2D -->
    <BarCode>
    	<Type>Datamatrix</Type>
    </BarCode>
</Properties>