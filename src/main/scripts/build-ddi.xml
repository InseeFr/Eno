<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." name="EnoDDI">
    
    <!-- ********************************************** ddiPreprocessing ************************************************ -->
    <!-- This target will call 3 sub targets : dereferencing / cleaning / titling -->
    <target name="ddiPreprocessing">
        <!-- Dereferencing : the input DDI files (ccs, qb...) -->
        <!-- Creates multiple files with a -dereferenced suffix in the temp folder-->
        <xslt 
            in="${questionnaires.home}/${survey-name}/ddi/${survey-name}.xml"
            out="${temp.home}/${survey-name}-dereferenced.xml" 
            style="${xslt.home}/util/ddi/dereferencing-alpha.xsl"
            classpath="${saxon.jar}" 
            force="true">
        </xslt>
        
        <!--titling-->
        <xslt 
            in="${temp.home}/${survey-name}-dereferenced.xml"
            out="${temp.home}/${survey-name}-titled.xml" 
            style="${xslt.home}/util/ddi/titling-alpha.xsl"
            classpath="${saxon.jar}" 
            force="true">
        </xslt>
        
        <!--cleaning-->
        <xslt 
            in="${temp.home}/${survey-name}-titled.xml"
            out="${temp.home}/${survey-name}-cleaned.xml"
            style="${xslt.home}/util/ddi/cleaning-alpha.xsl"
            classpath="${saxon.jar}" 
            force="true">
         </xslt>
        
        <!--splitting-->
        <xslt 
            in="${temp.home}/${survey-name}-titled.xml"
            out="${temp.home}/null.tmp"
            style="${xslt.home}/util/ddi/splitting.xsl"
            classpath="${saxon.jar}" 
            force="true">
            <param name="output-folder" expression="${temp-folder}"/>
            <param name="file-suffix" expression="-${survey-name}-splitted.xml"/>
        </xslt>
        
        <!-- For each created file (one by model), we clean. -->
        <!-- Creating a -cleaned suffixed file -->
        <!--foreach target="cleaning-alpha" param="file" inheritall="true">
            <path>
                <fileset dir="${temp.home}" includes="*-${survey-name}-splitted.xml"/>
            </path>
        </foreach-->
        <!-- Then adding titles to the created file below -->
        <!-- Creating a -final suffixed file -->
        <!--foreach target="titling" param="file" inheritall="true">
            <path>
                <fileset dir="${temp.home}" includes="*-cleaned.tmp"/>
            </path>
        </foreach-->
    </target>
    
