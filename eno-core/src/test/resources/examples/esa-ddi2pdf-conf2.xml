<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains common properties used by the ddi2pdf transformation  -->
<Properties>
	<TextConditioningVariable>
		<ddi>
			<Before>¤</Before>
			<After>¤</After>
		</ddi>
	</TextConditioningVariable>
	<Format>
		<Columns>1</Columns>
		<!-- Orientation : portrait= 0 ou paysage =90 -->
		<Orientation>90</Orientation>
	</Format>
	<HomePage>
		<Folder>xslt/outputs/pdf</Folder>
		<File>home-page.xsl</File>
	</HomePage>
	<Style>
		<Folder>styles</Folder>
		<File>style.xsl</File>
	</Style>
	<Images>
<!--         <Folder>file:c:///Users/Laurent/AppData/Local/Temp/img/</Folder> -->
    <!--<Folder>c:///Users/Laurent/git/EnoLaurent/src/test/resources/ddi-to-pdf/img/</Folder>-->
	<Folder>C:///git_workspace/PDF/Eno/src/test/resources/ddi-to-pdf/img/</Folder>
    </Images>
    <!-- Definit la taille par défaut des rosters -->
    <Roster>
    	<Row>
    		<DefaultSize>15</DefaultSize>
    	</Row>
    </Roster>
    <!-- Definit le nombre maximum de lignes dans un tableau -->
    <Table>
    	<Row>
    		<DefaultSize>15</DefaultSize>
    		<NbRow>1</NbRow>
    	</Row>
    </Table>
    <TextArea>
    	<Row>
    		<DefaultSize>5</DefaultSize>
    	</Row>
    </TextArea>
    <!-- BarCode type: Datamatrix ou 2D -->
    <BarCode>
    	<Type>Datamatrix</Type>
    </BarCode>
</Properties>